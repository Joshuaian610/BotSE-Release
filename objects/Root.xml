<!--======================= Defaults ========================-->
<Defaults>
    <Text class="player_panel_text" font="Fonts/Planewalker Bold.otf" fontSize="22" fontStyle="Bold" outline="#000000" shadow="#000000" color="#FFFFFF"/>

    <Button class="utility_button" height="50" color="#FFFFFF" textShadow="#000000" textOutline="#000000" tooltipFontSize="18" rectAlignment="MiddleRight"/>
    <Text class="utility_button_text" font="Fonts/Planewalker Bold.otf" fontSize="18" fontStyle="Bold" outline="#00000000" shadow="#00000000" color="#000000"/>
</Defaults>

<!--==================== Utility Buttons ====================-->
<Panel id="utility_buttons_panel" width="720" height="50" rectAlignment="LowerRight" offsetXY="-85 10" color="#00000000" visibility="Red|Orange|Blue|Green">
    <Button id="cooldownButton" width="120" offsetXY="-485 0" onClick="cooldown" class="utility_button" tooltip="Perform the beginning of turn Cooldown action" tooltipPosition="Above">
        <Text class="utility_button_text">Cooldown</Text>
    </Button>

    <Button id="collapseButton" width="200" offsetXY="-285 0" onClick="collapseCooldownRow" class="utility_button" tooltip="Collapse your Cooldown Track to clean up gaps" tooltipPosition="Above">
        <Text class="utility_button_text">Collapse CD Row</Text>
    </Button>

    <Button id="fatigueButton" width="130" offsetXY="-155 0" onClick="gainLightFatigue" class="utility_button" tooltip="Add a Light Fatigue dice to your Cooldown Track" tooltipPosition="Above">
        <Text class="utility_button_text">+ Fatigue</Text>
    </Button>

    <Button id="overfatigueButton" width="155" offsetXY="0 0" onClick="gainOverfatigue" class="utility_button" tooltip="Add an Overfatigue dice to your Cooldown Track" tooltipPosition="Above">
        <Text class="utility_button_text">+ Overfatigue</Text>
    </Button>
</Panel>

