    <Button class="utility_button" height="35" color="#FFFFFF" textShadow="#000000" textOutline="#000000" tooltipFontSize="18" rectAlignment="MiddleRight"/>
    <Text class="utility_button_text" font="Fonts/Planewalker Bold.otf" fontSize="17" fontStyle="Bold" outline="#00000000" shadow="#00000000" color="#000000"/>

    <!-- Player Panel Defaults -->
    <Image class="player_panel_image" image="https://steamusercontent-a.akamaihd.net/ugc/10782059877118927022/3B1061933618390234A931A38E24163EC3665060/" width="190" height="90" offsetXY="-5 0"/>
    
    <Panel class="hp_button" width="38" height="42" rectAlignment="LowerRight" offsetXY="-70.4 7" />
    <Panel class="bonus_hp_button" width="38" height="42" rectAlignment="LowerRight" offsetXY="-70.4 50" />
    <Panel class="tenacity_button" width="42" height="42" rectAlignment="LowerRight" offsetXY="-16.2 7" />
    <Panel class="xp_button" width="42" height="42" rectAlignment="LowerRight" offsetXY="-16.2 50" />

    <!-- Tracker Panel Defaults -->
    <Panel class="tracker_panel" width="65" height="65" rectAlignment="UpperRight" />
    <Image class="tracker_image" width="65" height="65" />
    <Text class="tracker_text" font="Fonts/Planewalker Bold.otf" fontSize="28" fontStyle="Bold" outline="#000000" shadow="#000000" color="#FFFFFF"/>
</Defaults>

<!--==================== Utility Buttons ====================-->

<Panel id="utility_buttons_panel" width="100" height="250" rectAlignment="LowerRight" offsetXY="-5 -25" color="#00000000" visibility="Red|Orange|Blue|Green">
    <Button id="cooldownButton" width="200" offsetXY="0 120" onClick="cooldown" class="utility_button" tooltip="Perform the beginning of turn Cooldown action" tooltipPosition="Left">
        <Text class="utility_button_text">Cooldown</Text>
    </Button>

    <Button id="collapseButton" width="200" offsetXY="0 80" onClick="collapseCooldownRow" class="utility_button" tooltip="Collapse your Cooldown Track to clean up gaps" tooltipPosition="Left">
        <Text class="utility_button_text">Collapse CD Row</Text>
    </Button>

    <Button id="fatigueButton" width="200" offsetXY="0 40" onClick="gainLightFatigue" class="utility_button" tooltip="Add a Light Fatigue dice to your Cooldown Track" tooltipPosition="Left">
        <Text class="utility_button_text">+ Fatigue</Text>
    </Button>

    <Button id="overfatigueButton" width="200" offsetXY="0 0" onClick="gainOverfatigue" class="utility_button" tooltip="Add an Overfatigue dice to your Cooldown Track" tooltipPosition="Left">
        <Text class="utility_button_text">+ Overfatigue</Text>
    </Button>
</Panel>

